{
  "name": "egghead-ui",
  "version": "2.22.0",
  "description": "Official living style guide app and component library for egghead.io",
  "main": "lib/index.js",
  "engines": {
    "node": ">=7.0.0"
  },
  "scripts": {
    "lint": "eslint src",
    "dev:styleguide": "start-storybook -p 2000",
    "dev:library": "babel src -w -d lib",
    "build:styleguide": "build-storybook",
    "build:library": "babel src -d lib",
    "verify": "yarn lint && yarn build:library && yarn build:styleguide",
    "bump": "yarn version && git push && git push --tags",
    "prepublish": "yarn build:library",
    "start": "react-scripts start",
    "build": "yarn verify"
  },
  "pre-commit": [
    "verify"
  ],
  "dependencies": {
    "@kadira/react-storybook-addon-info": "^3.3.0",
    "@kadira/storybook": "^2.5.2",
    "axios": "^0.15.3",
    "babel-cli": "^6.22.2",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "eslint": "^3.16.1",
    "font-awesome": "^4.6.3",
    "lodash": "^4.16.2",
    "pre-commit": "^1.2.2",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-scripts": "^0.8.4",
    "react-storybook-addon-props-combinations": "^0.0.1",
    "react-tabs": "^0.8.2",
    "styled-components": "^1.4.3",
    "tachyons-egghead": "^1.2.1"
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "latest"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eggheadio/egghead-ui.git"
  },
  "bugs": {
    "url": "https://github.com/eggheadio/egghead-ui/issues"
  },
  "homepage": "https://github.com/eggheadio/egghead-ui#readme"
}
